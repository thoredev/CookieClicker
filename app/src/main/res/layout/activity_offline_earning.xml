<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DAECC"
    tools:context=".OfflineEarningActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="204dp"
        android:layout_height="91dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96">

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/knopf" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="383dp"
        android:layout_height="112dp"
        android:background="#00000000"
        android:fadingEdgeLength="50dp"
        android:requiresFadingEdge="none"
        android:text="Willkommen zurÃ¼ck!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="32sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="407dp"
        android:layout_height="77dp"
        android:background="#00000000"
        android:text="Du warst Minuten offline"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="361dp"
        app:cardBackgroundColor="#84CDED"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="512dp"
                    android:textAlignment="center">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/frameLvl1"
                        android:layout_width="374dp"
                        android:layout_height="307dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/anzeigeLevel1"
                            android:layout_width="0dp"
                            android:layout_height="63dp"
                            android:gravity="right|center_vertical"
                            android:paddingHorizontal="5dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageLevel1"
                            app:layout_constraintEnd_toStartOf="@+id/imageLevel1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageLevel1"
                            android:layout_width="71dp"
                            android:layout_height="63dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/anzeigeLevel1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/kekskr_mel" />

                        <ImageView
                            android:id="@+id/image2Level1"
                            android:layout_width="71dp"
                            android:layout_height="63dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/anzeigeLevel1"
                            app:layout_constraintTop_toBottomOf="@+id/imageLevel1"
                            app:srcCompat="@drawable/normalerkeks" />

                        <TextView
                            android:id="@+id/anzeige2Level1"
                            android:layout_width="0dp"
                            android:layout_height="63dp"
                            android:layout_marginTop="5dp"
                            android:gravity="right|center_vertical"
                            android:paddingHorizontal="5dp"
                            android:text="TextView"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toStartOf="@+id/imageLevel1"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/anzeigeLevel1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>